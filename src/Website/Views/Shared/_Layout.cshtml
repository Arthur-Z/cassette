@{
    Bundles.Reference("assets/styles");
    Bundles.Reference("assets/iestyles");
    Bundles.Reference("http://platform.twitter.com/widgets.js", "body");
    Bundles.Reference("https://apis.google.com/js/plusone.js", "body");
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="keywords" content=".net asset management, asp.net, developer tools, web development, asset bundling, .net software" />
    <meta name="description" content="@ViewBag.Description" />
    <title>@ViewBag.Title</title>
    @Bundles.RenderStylesheets()
    <link href="https://plus.google.com/113762544776018463237/" rel="publisher" />
</head>
<body class="@ViewBag.Section">
    <div class="topwrap">
        <div class="top">
            <div class="wrap">
                <a class="logo" href="@Url.RouteUrl("Home")"></a>
                <ul class="links">
            

            <!--
                    <li id="tweet">
                        <a href="http://twitter.com/share" class="twitter-share-button" data-url="http://getcassette.net/" data-text="Open source automagic asset bundling for .NET web apps:" data-count="none" data-via="getcassette" data-related="andrewdavey">Tweet</a>
                    </li>
                    <li id="g1">
                        <g:plusone size="medium" count="false" href="http://getcassette.net/"></g:plusone>
                    </li>
            -->
                    <li @ActiveClassIf("features")>
                        <a id="features-link" href="@Url.RouteUrl("Features")">Features</a>
                    </li>
                    <li @ActiveClassIf("download")>
                        <a id="download-link" href="@Url.RouteUrl("Download")">Download</a>
                    </li>
                    <li @ActiveClassIf("documentation")>
                        <a id="docs-link" href="@Url.RouteUrl("Documentation", new { path = "" })">Docs</a>
                    </li>
                    <li @ActiveClassIf("support")>
                        <a id="support-link" href="@Url.RouteUrl("Support")">Support</a>
                    </li>
                    <li @ActiveClassIf("donate")>
                        <a id="donate-link" href="@Url.RouteUrl("Donate")">Donate</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    @RenderBody()

    <div class="footer">
        <a title="MIT Licensed" class="osi" href="@Url.RouteUrl("Licensing")"></a>        
        <ul>
             <li>
                <a @ActiveClassIf("contact") href="@Url.RouteUrl("Contact")">Contact</a>
             </li>
             <li>
                <a @ActiveClassIf("resources") href="@Url.RouteUrl("Resources")">Resources</a>
             </li>
        </ul>
        <p>&#169; 2011 <a href="http://www.aboutcode.net" target="_blank">Andrew Davey</a> &#183; Website design by <a href="http://twitter.com/pixelistUK" target="_blank">&#64;pixelistUK</a> &#183; Cassette is distributed by <a href="http://www.equin.co.uk" target="_blank">Equin Ltd</a></p>
        <p>Icons from <a href="http://symb.ly/" target="_blank">Symb.ly</a> and <a href="http://www.uiparade.com/ui-toolkit/" target="_blank">The UI Toolkit</a> 
        &#183; Patterns from <a href="http://subtlepatterns.com" target="_blank">Subtle Patterns</a></p>    
    </div>
    @Bundles.RenderScripts("body")
    <script type="text/javascript">
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-25354265-1']);
        _gaq.push(['_trackPageview']);
        (function () {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
    </script>
</body>
</html>
@helper ActiveClassIf(string section) {
    if (ViewBag.Section == section)
    {
        @:class="active"
    }
}